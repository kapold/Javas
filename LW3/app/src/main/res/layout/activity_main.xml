<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/patronymic_ET"
        android:layout_width="344dp"

        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="   Отчество"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/surname_ET"
        android:layout_width="344dp"

        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="   Фамилия"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_ET"
        android:layout_width="344dp"

        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="   Имя"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/education_spinner"
        android:entries="@array/educationList"

        android:layout_width="344dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/hasExperience"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="360dp"
        android:text="Есть опыт работы"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_btn"
        android:onClick="NextLayout_Btn"

        android:layout_width="344dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="644dp"
        android:text="Далее"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prev_btn"
        android:visibility="invisible"

        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="572dp"
        android:text="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/currentProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="3"

        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="572dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>